        <Button
            android:id="@+id/btnSeven"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="JNI计算器" />
        <Button
            android:id="@+id/btnEight"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="AsyncTask" />
        <Button
            android:id="@+id/btnNine"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="MediaPlay" />
        <Button
            android:id="@+id/btnTen"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Handler" />
        <Button
            android:id="@+id/btnEleven"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="单例模式" />
        <Button
            android:id="@+id/btnTwelve"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Mediacodec视频压缩" />
        <Button
            android:id="@+id/btnThirteen"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="SurfaceView" />
        <Button
            android:id="@+id/btnFourteen"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="NV21预览" />
        <Button
            android:id="@+id/btnFifteen"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="mediacodec视频分离器和混合器"/>
        <Button
            android:id="@+id/btnSixteen"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="OPGLES绘制三角形"/>

        <Button
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/dp_5"/>

    </LinearLayout>

</ScrollView>