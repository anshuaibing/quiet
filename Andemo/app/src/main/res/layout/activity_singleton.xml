<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.designpattern.singletondemo.SingletonActivity">
    <TextView
        android:background="#4CAF50"
        android:id="@+id/tvSingleton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/tvSingleton"
        >
        <Button
            android:id="@+id/btnDCL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="双重校验锁"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/btnEnum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="枚举类"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/btnHungry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="饿汉式"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/btnLazy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="懒汉式"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/btnStatic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="登记/静态内部类"
            android:onClick="onClick"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>