<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".greendao.GreeenDaoDemo">

    <TextView
        android:id="@+id/greendao_tv"
        android:layout_width="match_parent"
        android:background="@color/teal_700"
        android:layout_height="273dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/userTv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号："
            android:textSize="30dp"/>

        <EditText
            android:id="@+id/green_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="6位以上"
            android:textSize="30dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/userTv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码："
            android:textSize="30dp"
            android:layout_toRightOf="@+id/userTv1"/>

        <EditText
            android:id="@+id/green_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="6位以上"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/userTv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机："
            android:textSize="30dp"
            android:layout_toRightOf="@+id/userTv1"/>

        <EditText
            android:id="@+id/green_tel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="131××××××××"
            android:textSize="30dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/green_add"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="增"
            android:textSize="25dp"
            android:onClick="onClick"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/green_del"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="25dp"
            android:text="删"
            android:onClick="onClick"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/green_change"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="25dp"
            android:text="改"
            android:onClick="onClick"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/green_check"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="查"
            android:onClick="onClick"
            android:textSize="25dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>




</LinearLayout>