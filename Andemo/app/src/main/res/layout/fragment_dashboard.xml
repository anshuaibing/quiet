<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:my="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment">

    <com.example.andemo.ui.myview.MyView
        android:id="@+id/id_myView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        my:text="测试自定义组件"
        my:textColor="#AE4D4D"
        my:textSize="20sp" />

    <com.example.andemo.ui.myview.RadarView
        android:id="@+id/my_redarView"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_200"
        android:layout_margin="10dp"
        android:padding="@dimen/dp_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_myView"
        my:circleColor="#0066CC"
        my:circleNum="3"
        my:direction="true"
        my:interval="113"
        my:lineWidth="3"
        my:showCross="true"
        my:speed="6"
        my:sweepColor="#659BEB" />


</androidx.constraintlayout.widget.ConstraintLayout>